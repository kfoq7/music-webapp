---
import PlayListIcon from '@/icons/PlaylistIcon.astro'
import CheveronUpIcon from '@/icons/CheveronUpIcon.astro'
---

<div class="w-full h-[80%] mt-10 mb-5 bg-[#202026] text-white flex flex-col rounded-md">
  <section class="p-5">
    <header class="flex items-center justify-between">
      <h2>Player</h2>
      <div>
        <PlayListIcon />
      </div>
    </header>

    <main class="mt-6 mb-16 flex flex-col items-center justify-between gap-2 text-center">
      <picture class="mb-4">
        <img
          src="/current.png"
          class="object-cover object-top rounded-lg w-full h-56 max-w-72 aspect-[220/228]"
        />
      </picture>

      <section class="my-2.5">
        <h1 class="text-2xl font-medium mb-2">Ripple Echoes</h1>
        <h2 class="text-lg">Kael Fischer</h2>
        <span class="text-xs text-gray-silver">Best of 2024</span>
      </section>

      <div class="flex items-center my-2.5 gap-1">
        <span>1:45</span>
        <div class="flex mx-2">
          <div
            class='relative w-[120px] h-0.5 bg-white before:content-[""] before:bg-white before:size-2.5 before:absolute before:-top-[5px] before:left-[120px] before:rounded-[50%]'
          >
          </div>
          <div class="w-20 h-0.5 bg-gray text-gray-silver"></div>
        </div>
        <span>2:45</span>
      </div>
    </main>
  </section>

  <section class="bg-[#5773ff] h-full rounded-b-md relative flex items-center justify-center gap-3">
    <div class="mb-3 flex items-center gap-6">
      <button>Repeat</button>
      <button>Fisrt page</button>
      <button>Play</button>
      <button>Last page</button>
      <button>trasnfer alt</button>
    </div>

    <div
      class="flex flex-col items-center absolute bottom-2 cursor-pointer fill-white transition-all ease-in-out duration-300 hover:font-bold hover:text-gray-700 hover:fill-gray-700"
    >
      <CheveronUpIcon className="absolute bottom-4" />
      <h2 class="text-sm">Lyrics</h2>
    </div>
  </section>
</div>
