---
interface Props {
  title: string
  className?: string
}

const { title, className } = Astro.props
---

<section class={`py-5 px-6 bg-[#202026] rounded-lg ${className}`}>
  <header class="flex items-center justify-between">
    <h2 class="font-bold">{title}</h2>
    <a href="#" class="text-sm text-gray-silver">See all</a>
  </header>

  <slot />
</section>
